<Page x:Class="GymDesktopApp.Register"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GymDesktopApp"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Register"
      Background= "GhostWhite" >
    <Page.Resources>
        <Style x:Key="PasswordLabel" TargetType="{x:Type Label}">
            <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="VerticalContentAlignment" Value="Top"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Label}">
                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Padding="{TemplateBinding Padding}" SnapsToDevicePixels="true">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" RecognizesAccessKey="True" SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsEnabled" Value="false">
                                <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid>
        <!--need 4 rows and two columns-->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height =" Auto"/>
            <RowDefinition Height =" Auto"/>
            <RowDefinition Height =" *"/>
            


        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <!--Blue Rectangle for styling-->
        <Rectangle Grid.Row="0" 
                   Grid.Column="0"
                   Fill="CornflowerBlue" 
                   HorizontalAlignment="Stretch" 
                   VerticalAlignment="Stretch"
                   Grid.RowSpan="4" 
                   Width="250"/>
        <!-- Title -->
        <TextBlock Grid.Row="0" Grid.Column="1" Text="REGISTER" FontSize="24" FontWeight="Bold" Margin="80,20,0,0" HorizontalAlignment="Left" />
        <!-- Username with its label-->
        <TextBlock Grid.Row="1" Grid.Column="1" Text="Username:" FontSize="16" FontWeight="Bold" Margin="80,40,0,0" HorizontalAlignment="Left"/>
        <Label  Height="30 " Width="200  " Grid.Row="1" Grid.Column="1" Margin="80,50,0,0" HorizontalAlignment="Left" Background="GhostWhite" BorderThickness="1" BorderBrush="black"/>
           <!--Password with its label-->
        <TextBlock Grid.Row="1" Grid.Column="1" Text="Password:" FontSize="16" FontWeight="Bold" Margin="80,110,0,0" HorizontalAlignment="Left"/>
        <Label Style="{DynamicResource PasswordLabel}"  Height="30 " Width="200  " Grid.Row="2" Grid.Column="1" Margin="80,0,0,70" HorizontalAlignment="Left" Background="GhostWhite" BorderThickness="1" BorderBrush="black"/>
       <!--Confirm password-->
        <TextBlock Grid.Row="2" Grid.Column="1" Text="Confirm Password:" FontSize="16" FontWeight="Bold" Margin="80,50,0,0" HorizontalAlignment="Left"/>
        <Label Style="{DynamicResource PasswordLabel}"  Height="30 " Width="200  " Grid.Row="2" Grid.Column="1" Margin="80,80,0,0" HorizontalAlignment="Left" Background="GhostWhite" BorderThickness="1" BorderBrush="black" />
        <!-- App Title -->
        <TextBlock Grid.Row="1"   Text="Gym App Tracker" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" />
        <!-- ✅ Show Password + Buttons section (FIXED) -->
        <StackPanel Grid.Row="3" Grid.Column="1" Margin="80,20,0,20">

            <!-- Show Password row -->
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,10">
                <CheckBox Width="20" Height="20"/>
                <TextBlock Text="Show Password" FontFamily="Times New Roman" FontSize="16" Margin="5,0,0,0"/>
            </StackPanel>

            <!--Sign Up button-->
            <Button Content="SIGN UP" FontWeight="Bold" Height="30" Width="70" 
                    Background="CornflowerBlue" Margin="0,0,0,10"/>

            <!--Already have an account-->
            <TextBlock Text="Already have an account?" FontWeight="Bold" FontSize="16" Margin="0,0,0,5"/>

            <!--Sign In button-->
            <Button  Content="SIGN IN" FontWeight="Bold" Height="30" Width="70" 
                    Background="CornflowerBlue" BorderBrush="Black" Click="SignUpFromRegister_Click" />
        </StackPanel>
    </Grid>
    
</Page>
